<link rel="stylesheet" href="../public/daycares.css" />

<title>Compare Daycares</title>
<article class="compare-form">
    <h1>Compare Daycares</h1>

    <form method="POST" action="/daycares/compare">
        <div>
            <label for="daycare1">Select First Daycare:</label>
            <select id="daycare1" name="daycare1Name" required>
                {{#each daycares}}
                    <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div>
            <label for="daycare2">Select Second Daycare:</label>
            <select id="daycare2" name="daycare2Name" required>
                {{#each daycares}}
                    <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <button type="submit">Compare</button>
    </form>
</article>




