<title>Add Child</title>

<div class="table-form">
  <form id="addChildForm" method="POST" action="/users/addChildren">
    <div>
      <p>Adding Children</p>
      <table>
        <tr><th>First Name</th><td>
            <input
              type="text"
              name="firstnameInput"
              id="firstnameInput"
              placeholder="First Name"
            />
          </td></tr>
        <tr><th>Last Name</th><td>
            <input
              type="text"
              name="lastnameInput"
              id="lastnameInput"
              placeholder="Last Name"
            />
          </td></tr>
        <tr><th>Age</th><td>
            <input
              type="text"
              name="ageInput"
              id="ageInput"
              placeholder="Age"
            />
          </td></tr>
      </table>
    </div>
    <div class="button-container">
      <button type="submit">Add Child</button>
    </div>
  </form>
  <a class="nav-link" href="/users/userPage">
    <button>Cancel</button>
  </a>
