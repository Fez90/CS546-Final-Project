<title>Edit Children</title>

<div class="table-form2">
  <form id="editChildForm" method="POST" action="/users/editChildren">
    <input type="hidden" name="_method" value="PATCH" />
    <p>Child Information</p>
    <table>
      <tr><th>First Name</th><td>
          <input
            type="text"
            name="firstnameInput"
            id="firstnameInput"
            placeholder="First Name"
          />
        </td></tr>
      <tr><th>Last Name</th><td>
          <input
            type="text"
            name="lastnameInput"
            id="lastnameInput"
            placeholder="Last Name"
          />
        </td></tr>
      <tr><th>Age</th><td>
          <input type="text" name="ageInput" id="ageInput" placeholder="Age" />
        </td></tr>
    </table>
    <button type="submit">Save</button>
  </form>
  <div class="button-container">
    <a class="nav-link" href="/users/deleteChild">
      <button>Delete Child</button>
    </a>
    <a class="nav-link" href="/users/userPage">
      <button>Cancel</button>
    </a>
  </div>
</div>